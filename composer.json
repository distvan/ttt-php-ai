{
    "name": "distvan/ttt-php-ai",
    "description": "example AI application just for educational purpose",
    "keywords": ["AI", "php", "learning"],
    "homepage": "https://github.com/distvan/",
    "type": "project",
    "authors": [
        {
            "name": "Istvan Dobrentei",
            "email": "info@dobrenteiistvan.hu",
            "homepage": "https://www.en.dobrenteiistvan.hu",
            "role": "Software Developer"
        }
    ],
    "license": "GPL-3.0-only / GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "psr/container": "^2.0",
        "psr/http-message": "^2.0",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "monolog/monolog": "^3.9",
        "vlucas/phpdotenv": "^5.6",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "^10.5",
        "guzzlehttp/guzzle": "^7.9",
        "phan/phan": "^5.4",
        "distvan/php2plantuml": "^1.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --configuration phpunit.xml",
        "phpcs": "./vendor/bin/phpcs --standard=PSR12 ./src",
        "doc": "php phpDocumentor.phar -d ./src -t ./doc"
    }
}
